<h3 class="alt-h3 mb-3"><%=t "calendar.title" %></h3>
<p class="text-gray mb-4"><%=t "calendar.description" %></p>
<span class="addtocalendar atc-style-blue">
  <a class="atcb-link btn btn-outline">
    <%=t "calendar.button" %>
  </a>

  <var class="atc_event">
      <% next_friday = (Time.zone.today + 7).beginning_of_week :friday %>
      <var class="atc_date_start"><%= next_friday %> 12:00:00</var>
      <var class="atc_date_end"><%= next_friday %> 18:00:00</var>
      <var class="atc_timezone">Europe/London</var>
      <var class="atc_title">Open Source Friday</var>
      <var class="atc_description">Encourage everyone to work on open source today.</var>
      <var class="atc_location">https://opensourcefriday.com</var>
      <var class="atc_ical_filename">open-source-friday</var>
  </var>
</span>
